.feedback_main {
  background-color: #eee;
  padding: 20rpx;
  color: #666;
}
.feedback_main .feedback_tips {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.feedback_main .feedback_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 10rpx;
}
.feedback_main .feedback_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.feedback_main .feedback_content textarea {
  padding: 20rpx;
}
.feedback_main .feedback_content .feedback_tools {
  display: flex;
  flex-wrap: wrap;
}
.feedback_main .feedback_content .feedback_tools button {
  margin: 0;
  width: 80rpx;
  height: 80rpx;
  font-size: 60rpx;
  color: #ccc;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  background-color: #67c567;
}
.feedback_main .feedback_content .feedback_tools .upimg_item {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}
.feedback_main .feedback_btn_wrap {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.feedback_main .feedback_btn_wrap button {
  font-size: 36rpx;
  width: 30%;
  color: green;
  background-color: #fff;
  padding: 10rpx;
  margin: 0;
  border-radius: 10rpx;
}
